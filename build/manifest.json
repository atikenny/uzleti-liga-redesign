{
    "manifest_version": 2,
    "name": "Uzleti liga redesign",
    "version": "1.2.4",

    "description": "Redesign extension for www.uzletiliga.hu",

    "icons": {
        "16": "img/favicon-16.png",
        "128": "img/favicon-128.png"
    },
    "content_scripts": [
        {
            "matches": ["http://www.uzletiliga.hu/eredmenyek/matches*"],
            "css": ["css/matches.css"],
            "js": [
                "js/third-party/react.js",
                "js/third-party/react-dom.js",
                "js/third-party/jquery.js",
                "js/third-party/d3.min.js",
                "js/components/filter.js",
                "js/matches.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["js/storage-handler.js"]
    },
    "web_accessible_resources": [
        "font/*.*",
        "img/*.*",
        "js/injected-script.js"
    ],
    "permissions": [
        "storage"
    ]
}
