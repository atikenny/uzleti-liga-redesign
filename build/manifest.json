{
    "manifest_version": 2,
    "name": "Uzleti liga redesign",
    "version": "1.2.4",

    "description": "Redesign extension for www.uzletiliga.hu",

    "icons": {
        "16": "img/favicon-16.png",
        "128": "img/favicon-128.png"
    },
    "content_scripts": [
        {
            "matches": ["http://www.uzletiliga.hu/*"],
            "css": [
                "css/main/main-app.css",
                "css/main/components/header.css",
                "css/main/components/sidebar.css"
            ],
            "js": [
                "js/third-party/jquery.js",
                "js/third-party/react.js",
                "js/third-party/react-dom.js",
                "js/main/components/business-league.js",
                "js/main/components/header.js",
                "js/main/components/sidebar.js",
                "js/main/main-app.js",
                "js/index.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["js/storage-handler.js"]
    },
    "web_accessible_resources": [
        "font/*.*",
        "img/*.*"
    ],
    "permissions": [
        "storage"
    ]
}
